<%- include('parts/header.ejs') %>

<body>
    <h1><%= projectTitle %></h1>
    <% for(let item of runList) { %>
        <div>
            <h1><%= item.location %></h1>
            <p><%= formatDate(item.date) %></p>
            <h3><%= item.distance %> mi</h3>
            <p>Pace: <%= item.pace %>/mi</p>
            <p>Comment: <%= item.comments%></p>
        </div>
    <% } %>
</body>

<%
function formatDate(date) {
    const formattedDate = new Date(date);
    
    const month = String(formattedDate.getMonth() + 1).padStart(2, '0'); // Adding 1 to get the correct month (months are zero-indexed)
    const day = String(formattedDate.getDate()).padStart(2, '0'); // Pad the day with leading zero if necessary
    const year = formattedDate.getFullYear(); // Get the full year
    const formattedDateString = `${month}-${day}-${year}`;
    return formattedDateString;
}
%>

